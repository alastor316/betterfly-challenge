<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/nameTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#4683b0"
                android:textStyle="bold"
                tools:text="nombre repositoriooo"
                android:layout_marginEnd="16dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/autorRelativeLayout"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="false"
                />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                tools:text="descripcion del repositorio que donde tendr mucho contenido de algun pull request"
                android:layout_below="@+id/nameTextview"
                android:layout_marginEnd="16dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/autorRelativeLayout"
                android:layout_marginRight="8dp"/>





            <RelativeLayout
                android:id="@+id/autorRelativeLayout"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/repositoryImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:id="@+id/autorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4683b0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_below="@+id/repositoryImageView"
                    android:layout_marginEnd="5dp"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="false" />



            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>
</layout>